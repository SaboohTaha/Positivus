---
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/src/assets/svgs/icons/slide_selected.svg"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>Positivus</title>

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-white text-slate-900 overflow-x-hidden w-full">
		<slot />

		<!-- Lenis Smooth Scroll -->
		<script
			is:inline
			src="https://unpkg.com/@studio-freight/lenis@1.0.42/dist/lenis.min.js"
		></script>
		<script is:inline>
			const lenis = new Lenis({
				duration: 1.2,
				easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
				orientation: "vertical",
				gestureOrientation: "vertical",
				smoothWheel: true,
				wheelMultiplier: 1,
				smoothTouch: false,
				touchMultiplier: 2,
				infinite: false,
			});

			function raf(time) {
				lenis.raf(time);
				requestAnimationFrame(raf);
			}

			requestAnimationFrame(raf);

			// Handle anchor links
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener("click", function (e) {
					e.preventDefault();
					const target = document.querySelector(
						this.getAttribute("href")
					);
					if (target) {
						lenis.scrollTo(target, {
							offset: -68, // Offset for sticky header
							duration: 1.5,
						});
					}
				});
			});
		</script>
	</body>
</html>
