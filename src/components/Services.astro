---
import seoSrc       from '../assets/svgs/services/SEO.svg?url';
import ppcSrc       from '../assets/svgs/services/PPC.svg?url';
import smmSrc       from '../assets/svgs/services/SMM.svg?url';
import emSrc        from '../assets/svgs/services/EM.svg?url';
import ccSrc        from '../assets/svgs/services/CC.svg?url';
import analyticsSrc from '../assets/svgs/services/Analytics.svg?url';

import arrowBlackGreen from '../assets/svgs/arrows/arrow_in_circle_black_green.svg?url';
import arrowWhiteBlack from '../assets/svgs/arrows/arrow_in_circle_white_black.svg?url';

import SectionHeader from './ui/SectionHeader.astro';

/**
 * Card variants (from Figma):
 *
 * bg        | pillBg   | arrowSrc          | linkColor
 * --------- | -------- | ----------------- | ---------
 * #F3F3F3   | #B9FF66  | arrowBlackGreen   | #000000   ← grey card
 * #B9FF66   | #FFFFFF  | arrowBlackGreen   | #000000   ← green card
 * #191A23   | #FFFFFF  | arrowWhiteBlack   | #FFFFFF   ← dark card (white pills)
 * #191A23   | #B9FF66  | arrowWhiteBlack   | #FFFFFF   ← dark card (green pills)
 */
const CARDS = [
  {
    lines:       ['Search engine', 'optimization'],
    bg:          '#F3F3F3',
    pillBg:      '#B9FF66',
    arrowSrc:    arrowBlackGreen,
    linkColor:   '#000000',
    svgSrc:      seoSrc,
    imgFlip:     false,
  },
  {
    lines:       ['Pay-per-click', 'advertising'],
    bg:          '#B9FF66',
    pillBg:      '#FFFFFF',
    arrowSrc:    arrowBlackGreen,
    linkColor:   '#000000',
    svgSrc:      ppcSrc,
    imgFlip:     false,
  },
  {
    lines:       ['Social media', 'marketing'],
    bg:          '#191A23',
    pillBg:      '#FFFFFF',
    arrowSrc:    arrowWhiteBlack,
    linkColor:   '#FFFFFF',
    svgSrc:      smmSrc,
    imgFlip:     false,
  },
  {
    lines:       ['Email', 'marketing'],
    bg:          '#F3F3F3',
    pillBg:      '#B9FF66',
    arrowSrc:    arrowBlackGreen,
    linkColor:   '#000000',
    svgSrc:      emSrc,
    imgFlip:     true,
  },
  {
    lines:       ['Content', 'creation'],
    bg:          '#B9FF66',
    pillBg:      '#FFFFFF',
    arrowSrc:    arrowBlackGreen,
    linkColor:   '#000000',
    svgSrc:      ccSrc,
    imgFlip:     false,
  },
  {
    lines:       ['Analytics and', 'tracking'],
    bg:          '#191A23',
    pillBg:      '#B9FF66',
    arrowSrc:    arrowWhiteBlack,
    linkColor:   '#FFFFFF',
    svgSrc:      analyticsSrc,
    imgFlip:     false,
  },
];
---

<section id="services" class="pt-[70px] pb-[70px] bg-white">

  <SectionHeader 
    title="Services"
    description="At our digital marketing agency, we offer a range of services to help businesses grow and succeed online. These services include:"
  />

  <!-- Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-[40px] w-full mx-auto max-w-[1440px] px-[20px] md:px-[100px]">
    {CARDS.map((card) => (
      <div
        class="flex flex-row justify-between items-center box-border w-full h-auto min-h-[270px] md:h-[310px] p-[30px] md:p-[50px] border border-[#191A23] rounded-[45px]"
        style={`
          background: ${card.bg};
          box-shadow: 0px 5px 0px #191A23;
        `}
      >
        <!-- LEFT: Heading + Link -->
        <div class="flex flex-col justify-between h-full items-start gap-[40px] md:gap-[93px]">
          
          <div class="flex flex-col items-start">
            {card.lines.map((line) => (
              <div
                class="flex items-start px-[7px] rounded-[7px] mb-1 last:mb-0"
                style={`background: ${card.pillBg};`}
              >
                <h3 class="m-0 font-sans font-medium text-[24px] md:text-[30px] leading-[32px] md:leading-[38px] text-black whitespace-nowrap">
                  {line}
                </h3>
              </div>
            ))}
          </div>

          <a href="#" class="flex flex-row items-center gap-[15px] no-underline group">
            <img src={card.arrowSrc} alt="Arrow" class="w-[41px] h-[41px] transition-transform group-hover:rotate-12" />
            <span
              class="hidden md:inline font-sans font-normal text-[20px] leading-[28px] whitespace-nowrap"
              style={`color: ${card.linkColor};`}
            >
              Learn more
            </span>
          </a>
        </div>

        <!-- RIGHT: Illustration -->
        <div class="shrink-0 flex items-center justify-center w-[150px] md:w-[210px] h-[150px] md:h-[210px]">
          <img
            src={card.svgSrc}
            alt=""
            aria-hidden="true"
            class="block max-w-full max-h-full object-contain"
            style={card.imgFlip ? 'transform: scaleX(-1);' : undefined}
          />
        </div>
      </div>
    ))}
  </div>

</section>
