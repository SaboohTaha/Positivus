---
const caseStudies = [
    {
        title: "EcoTech Mobile App Redesign",
        category: "Mobile Design",
        description:
            "Increased user retention by 45% through intuitive UI and simplified navigation.",
        bg: "bg-emerald-500",
        gradient: "from-emerald-400 to-teal-600",
    },
    {
        title: "FinServe Digital Banking",
        category: "Fintech",
        description:
            "Launched a secure, high-performance web platform handling millions of transactions daily.",
        bg: "bg-blue-600",
        gradient: "from-blue-500 to-indigo-700",
    },
    {
        title: "StyleHouse E-commerce",
        category: "Retail",
        description:
            "Boosted conversion rates by 30% with a bespoke shopping experience and fast checkout.",
        bg: "bg-pink-500",
        gradient: "from-pink-400 to-rose-600",
    },
];
---

<section id="case-studies" class="py-24 bg-white">
    <div class="layout-padding">
        <div class="flex flex-col md:flex-row justify-between items-end mb-16">
            <div class="max-w-2xl">
                <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6">
                    Our Recent Work
                </h2>
                <p class="text-lg text-slate-600">
                    Explore how we've helped businesses across industries
                    achieve their goals.
                </p>
            </div>
            <a
                href="#"
                class="hidden md:inline-flex items-center font-semibold text-indigo-600 hover:text-indigo-700 transition-colors mt-4 md:mt-0 group"
            >
                View all projects
                <span
                    class="ml-2 group-hover:translate-x-1 transition-transform"
                    >→</span
                >
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                caseStudies.map((study) => (
                    <div class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-gray-100 dark:bg-gray-800 transition-all hover:scale-[1.02] duration-300 shadow-lg">
                        <div
                            class={`absolute inset-0 bg-gradient-to-br ${study.gradient} opacity-90 transition-opacity duration-300`}
                        />

                        <div class="absolute bottom-0 left-0 p-8 w-full translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                            <span class="inline-block px-3 py-1 text-xs font-bold tracking-wider text-white uppercase bg-white/20 backdrop-blur-sm rounded-full mb-3">
                                {study.category}
                            </span>
                            <h3 class="text-2xl font-bold text-white mb-2">
                                {study.title}
                            </h3>
                            <p class="text-white/80 line-clamp-2 md:line-clamp-none opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-75">
                                {study.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="mt-8 text-center md:hidden">
            <a
                href="#"
                class="inline-flex items-center font-semibold text-indigo-600 hover:text-indigo-700 transition-colors"
            >
                View all projects →
            </a>
        </div>
    </div>
</section>
