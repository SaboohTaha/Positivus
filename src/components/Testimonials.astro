---
const testimonials = [
  {
    name: "John Doe",
    position: "CTO, StartUp Inc",
    text: "This team delivered beyond our expectations. Their attention to detail and technical expertise is unmatched.",
    avatar: "bg-red-200"
  },
  {
    name: "Jane Smith",
    position: "Marketing Director, Brandify",
    text: "We saw a 200% increase in leads after launching the new site. The design is simply beautiful and converts like crazy.",
    avatar: "bg-blue-200"
  },
  {
    name: "Bob Johnson",
    position: "Founder, TechFlow",
    text: "Professional, timely, and innovative. They truly understood our vision and brought it to life effortlessly.",
    avatar: "bg-green-200"
  },
  {
    name: "Alice Williams",
    position: "Product Manager, Innovate",
    text: "The best agency we've worked with. The process was transparent and the results were spectacular.",
    avatar: "bg-purple-200"
  },
  {
    name: "Charlie Brown",
    position: "CEO, Enterprise Solutions",
    text: "Highly recommended for any business looking to scale their digital presence. A game changer.",
    avatar: "bg-yellow-200"
  },
];
import SectionHeader from './ui/SectionHeader.astro';
---

<section id="testimonials" class="py-[60px] md:py-[100px] bg-white relative overflow-hidden">
    <SectionHeader 
        title="Testimonials"
        description="Hear from Our Satisfied Clients: Read Our Testimonials to Learn More about Our Digital Marketing Services"
        descriptionMaxWidth="473px"
    />

    <!-- Scroll Snap Container -->
      <div 
        id="testimonial-slider"
        class="flex overflow-x-auto snap-x snap-mandatory gap-6 pb-8 -mx-4 px-4 md:mx-0 md:px-0 scrollbar-hide"
        style="scrollbar-width: none; -ms-overflow-style: none;"
      >
        {testimonials.map((t) => (
          <div class="flex-shrink-0 w-full md:w-[600px] snap-center bg-white p-10 rounded-2xl shadow-sm border border-slate-100 flex flex-col justify-between">
            <div>
               <!-- Quote Icon -->
               <svg class="w-10 h-10 text-indigo-100 mb-6" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.01691 21L5.01691 18C5.01691 16.8954 5.91234 16 7.01691 16H10.0169C10.5692 16 11.0169 15.5523 11.0169 15V9C11.0169 8.44772 10.5692 8 10.0169 8H6.01691C5.46462 8 5.01691 8.44772 5.01691 9V11C5.01691 11.5523 4.56919 12 4.01691 12H3.01691V5H13.0169V15C13.0169 18.3137 10.3306 21 7.01691 21H5.01691Z"/></svg>
               <p class="text-xl md:text-2xl text-slate-700 italic font-light leading-relaxed mb-8">"{t.text}"</p>
            </div>
            <div class="flex items-center">
              <div class={`w-12 h-12 rounded-full ${t.avatar} mr-4`}></div>
              <div>
                <h4 class="font-bold text-slate-900">{t.name}</h4>
                <p class="text-indigo-600 text-sm">{t.position}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Navigation Buttons (Optional enhancement) -->
       <button 
        onclick="document.getElementById('testimonial-slider').scrollBy({left: -300, behavior: 'smooth'})"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-1/2 bg-white rounded-full p-4 shadow-lg text-indigo-600 hover:text-indigo-700 transition-all hidden md:block opacity-0 group-hover:opacity-100 z-10"
        aria-label="Previous testimonial"
      >
        ←
      </button>
      <button 
        onclick="document.getElementById('testimonial-slider').scrollBy({left: 300, behavior: 'smooth'})"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1/2 bg-white rounded-full p-4 shadow-lg text-indigo-600 hover:text-indigo-700 transition-all hidden md:block opacity-0 group-hover:opacity-100 z-10"
        aria-label="Next testimonial"
      >
        →
      </button>
</section>
