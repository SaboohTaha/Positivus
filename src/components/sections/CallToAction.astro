---
import ctaSrc from "@assets/svgs/CTA.svg?url";
import Button from "@components/ui/Button.astro";
---

<section
    id="cta"
    class="w-full bg-white overflow-visible my-[60px] md:my-[100px]"
>
    <!-- Inner CTA row — Figma: padding 0 100px, max-width 1440px -->
    <div
        class="flex flex-row items-center w-full mx-auto box-border px-[20px] md:px-[100px] max-w-[1440px]"
    >
        <!-- Card — Figma: bg #F3F3F3, radius 45px, padding 0 60px -->
        <div
            class="flex flex-col md:flex-row items-center justify-between w-full h-auto min-h-[347px] bg-[#F3F3F3] rounded-[45px] px-[30px] md:px-[60px] py-[40px] md:py-0 relative overflow-hidden md:overflow-visible"
        >
            <!-- Text & Button Column — Figma: width 500px -->
            <div
                class="flex flex-col items-start gap-[20px] md:gap-[26px] z-10 max-w-full md:max-w-[500px]"
            >
                <h3
                    class="m-0 font-sans font-medium text-[26px] md:text-[30px] leading-[34px] md:leading-[38px] text-black"
                >
                    Let’s make things happen
                </h3>
                <p
                    class="m-0 font-sans font-normal text-[16px] md:text-[18px] leading-[22px] md:leading-[23px] text-black"
                >
                    Contact us today to learn more about how our digital
                    marketing services can help your business grow and succeed
                    online.
                </p>
                <Button href="#contact">Get your free proposal</Button>
            </div>

            <!-- Illustration Container — Figma center-to-center logic often overlaps -->
            <div class="hidden md:block shrink-0 relative w-[359px] h-[394px]">
                <img
                    src={ctaSrc}
                    alt=""
                    aria-hidden="true"
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 block w-full h-full object-contain"
                />
            </div>
        </div>
    </div>
</section>
