---
import SectionHeader from "@components/ui/SectionHeader.astro";
import TeamCard from "@components/ui/TeamCard.astro";
import Button from "@components/ui/Button.astro";
import TeamImageMask from "@components/svgs/TeamImageMask.astro";

// Import images
import johnImg from "@assets/jpgs/team/ian-dooley-d1UPkiFd04A-unsplash.jpg";
import janeImg from "@assets/jpgs/team/suad-kamardeen-khewjy5l4Zo-unsplash.jpg";
import michaelImg from "@assets/jpgs/team/christian-buehner-DItYlc26zVI-unsplash 1.jpg";
import emilyImg from "@assets/jpgs/team/feli-ramsanjami-agung-wUe_Q-t4-cI-unsplash.jpg";
import brianImg from "@assets/jpgs/team/chanvre-quebec-mXu1SpzHq6w-unsplash.jpg";
import sarahImg from "@assets/jpgs/team/alexandra-gorn-smuS_jUZa9I-unsplash.jpg";

import linkedinIcon from "@assets/svgs/company/linkedin.svg?url";

const team = [
  {
    name: "John Smith",
    role: "CEO and Founder",
    experience:
      "10+ years of experience in digital marketing. Expertise in SEO, PPC, and content strategy",
    image: johnImg.src,
    imagePos: { width: "107px", height: "161px", top: "-14px", left: "-5px" },
  },
  {
    name: "Jane Doe",
    role: "Director of Operations",
    experience:
      "7+ years of experience in project management and team leadership. Strong organizational and communication skills",
    image: janeImg.src,
    imagePos: { width: "188px", height: "125px", top: "-6px", left: "-51px" },
  },
  {
    name: "Michael Brown",
    role: "Senior SEO Specialist",
    experience:
      "5+ years of experience in SEO and content creation. Proficient in keyword research and on-page optimization",
    image: michaelImg.src,
    imagePos: { width: "208px", height: "139px", top: "0px", left: "-84px" },
  },
  {
    name: "Emily Johnson",
    role: "PPC Manager",
    experience:
      "3+ years of experience in paid search advertising. Skilled in campaign management and performance analysis",
    image: emilyImg.src,
    imagePos: { width: "284px", height: "426px", top: "-158px", left: "-88px" },
  },
  {
    name: "Brian Williams",
    role: "Social Media Specialist",
    experience:
      "4+ years of experience in social media marketing. Proficient in creating and scheduling content, analyzing metrics, and building engagement",
    image: brianImg.src,
    imagePos: { width: "165px", height: "247px", top: "-45px", left: "-36px" },
  },
  {
    name: "Sarah Kim",
    role: "Content Creator",
    experience:
      "2+ years of experience in writing and editing Skilled in creating compelling, SEO-optimized content for various industries",
    image: sarahImg.src,
    imagePos: { width: "105px", height: "105px", top: "0px", left: "-1px" },
  },
];
---

<section id="team" class="my-[60px] md:my-[100px] bg-white">
  <SectionHeader
    title="Team"
    description="Meet the skilled and experienced team behind our successful digital marketing strategies"
    descriptionMaxWidth="473px"
  />
  <div class="max-w-[1440px] mx-auto px-[20px] md:px-[100px]">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-[40px]">
      {
        team.map((member) => (
          <TeamCard
            name={member.name}
            role={member.role}
            experience={member.experience}
            image={member.image}
            linkedin={linkedinIcon}
            imagePos={member.imagePos}
          />
        ))
      }
    </div>

    <!-- View all team button â€” Figma: 269x68, bg #191A23, radius 14px -->
    <div class="flex justify-center md:justify-end mt-[40px]">
      <Button href="#contact" width="269px">See all team</Button>
    </div>
  </div>
</section>
