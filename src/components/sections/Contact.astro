---
import SectionHeader from "@components/ui/SectionHeader.astro";
import contactImg from "@assets/svgs/contact.svg?url";
import Button from "@components/ui/Button.astro";
---

<section id="contact" class="my-[60px] md:my-[100px] bg-white">
    <SectionHeader
        title="Contact Us"
        description="Connect with Us: Let's Discuss Your Digital Marketing Needs"
        descriptionMaxWidth="323px"
    />

    <div class="max-w-[1440px] mx-auto px-[20px] md:px-[100px]">
        <!-- Contact Block — Figma: bg #F3F3F3, radius 45px -->
        <div
            class="relative bg-[#F3F3F3] rounded-[45px] px-[30px] md:px-[100px] py-[60px] md:py-[70px] flex flex-row items-center overflow-hidden"
        >
            <!-- Form Side — Figma: width 556px -->
            <div class="w-full lg:w-[556px] flex flex-col gap-[40px] z-10">
                <!-- Radio Buttons -->
                <div class="flex flex-row gap-[35px]">
                    <label
                        class="radio-container flex items-center gap-[14px] cursor-pointer"
                    >
                        <input
                            type="radio"
                            name="inquiry"
                            value="say-hi"
                            checked
                            class="hidden"
                        />
                        <span
                            class="custom-radio w-[28px] h-[28px] rounded-full border border-black bg-white flex items-center justify-center relative"
                        >
                            <span
                                class="inner-circle w-[16px] h-[16px] rounded-full bg-[#B9FF66] opacity-0 transition-opacity"
                            ></span>
                        </span>
                        <span
                            class="font-sans font-normal text-[18px] leading-[23px] text-black"
                            >Say Hi</span
                        >
                    </label>

                    <label
                        class="radio-container flex items-center gap-[14px] cursor-pointer"
                    >
                        <input
                            type="radio"
                            name="inquiry"
                            value="get-quote"
                            class="hidden"
                        />
                        <span
                            class="custom-radio w-[28px] h-[28px] rounded-full border border-black bg-white flex items-center justify-center relative"
                        >
                            <span
                                class="inner-circle w-[16px] h-[16px] rounded-full bg-[#B9FF66] opacity-0 transition-opacity"
                            ></span>
                        </span>
                        <span
                            class="font-sans font-normal text-[18px] leading-[23px] text-black"
                            >Get a Quote</span
                        >
                    </label>
                </div>

                <!-- Input Fields -->
                <form class="flex flex-col gap-[25px]">
                    <!-- Name -->
                    <div class="flex flex-col gap-[5px]">
                        <label
                            for="name"
                            class="font-sans font-normal text-[16px] leading-[28px] text-black ml-[2px]"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Name"
                            class="w-full h-[59px] bg-white border border-black rounded-[14px] px-[30px] font-sans font-normal text-[18px] text-black placeholder:text-[#898989] focus:outline-none focus:ring-1 focus:ring-[#B9FF66]"
                        />
                    </div>

                    <!-- Email -->
                    <div class="flex flex-col gap-[5px]">
                        <label
                            for="email"
                            class="font-sans font-normal text-[16px] leading-[28px] text-black ml-[2px]"
                            >Email*</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="Email"
                            class="w-full h-[59px] bg-white border border-black rounded-[14px] px-[30px] font-sans font-normal text-[18px] text-black placeholder:text-[#898989] focus:outline-none focus:ring-1 focus:ring-[#B9FF66]"
                        />
                    </div>

                    <!-- Message -->
                    <div class="flex flex-col gap-[5px]">
                        <label
                            for="message"
                            class="font-sans font-normal text-[16px] leading-[28px] text-black ml-[2px]"
                            >Message*</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            required
                            placeholder="Message"
                            rows="6"
                            class="w-full h-[190px] bg-white border border-black rounded-[14px] p-[30px] font-sans font-normal text-[18px] text-black placeholder:text-[#898989] focus:outline-none focus:ring-1 focus:ring-[#B9FF66] resize-none"
                        ></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-[15px]">
                        <Button
                            href="javascript:void(0)"
                            width="100%"
                            id="contact-submit"
                            className="h-[68px]"
                        >
                            Send Message
                        </Button>
                    </div>
                </form>
            </div>

            <!-- Illustration Side — Figma: Negative margin -367px used for overlap look -->
            <div
                class="hidden lg:block absolute right-[-325px] top-1/2 -translate-y-1/2 shrink-0 pointer-events-none"
            >
                <img src={contactImg} alt="" class="w-[691px] h-auto" />
            </div>
        </div>
    </div>
</section>

<style>
    /* Radio Button Logic */
    .radio-container input:checked + .custom-radio .inner-circle {
        opacity: 1;
    }

    /* Input focus styles */
    input:focus,
    textarea:focus {
        border-color: #b9ff66;
    }
</style>
