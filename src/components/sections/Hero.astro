---
import Button from "@components/ui/Button.astro";
import heroSrc from "@assets/svgs/hero_section.svg?url";
import amazonSrc from "@assets/svgs/company/amazon.svg?url";
import dribbleSrc from "@assets/svgs/company/dribble.svg?url";
import hubspotSrc from "@assets/svgs/company/hubspot.svg?url";
import notionSrc from "@assets/svgs/company/notion.svg?url";
import netflixSrc from "@assets/svgs/company/netflix.svg?url";
import zoomSrc from "@assets/svgs/company/zoom.svg?url";

const logos = [
    { src: amazonSrc, alt: "Amazon", width: 124.11 },
    { src: dribbleSrc, alt: "Dribble", width: 126.37 },
    { src: hubspotSrc, alt: "HubSpot", width: 128.63 },
    { src: notionSrc, alt: "Notion", width: 145.55 },
    { src: netflixSrc, alt: "Netflix", width: 125.24 },
    { src: zoomSrc, alt: "Zoom", width: 110.57 },
];
---

<section id="hero" class="w-full bg-white overflow-hidden">
    <!-- ── MAIN HERO ROW ────────────────────────────────────── -->
    <div
        class="flex flex-col lg:flex-row justify-between items-center lg:items-start w-full mx-auto box-border pt-[40px] md:pt-[60px] pb-5 lg:pb-0 px-[20px] md:px-container-padding max-w-[1440px]"
    >
        <!-- LEFT COLUMN -->
        <div
            class="flex flex-col items-center lg:items-start text-center lg:text-left gap-[25px] md:gap-[35px] w-full lg:max-w-[531px]"
        >
            <h1
                class="m-0 font-sans font-medium text-[40px] md:text-[60px] leading-[48px] md:leading-[77px] text-black"
            >
                Navigating the digital landscape for success
            </h1>

            <!-- Illustration for Mobile - Visible between h1 and p as per common mobile patterns or keeps p next to h1 -->
            <div class="lg:hidden w-full max-w-[400px] my-5">
                <img
                    src={heroSrc}
                    alt=""
                    aria-hidden="true"
                    class="block w-full h-auto object-contain"
                />
            </div>

            <p
                class="m-0 font-sans font-normal text-[16px] md:text-[20px] leading-[23px] md:leading-[28px] text-black max-w-[498px]"
            >
                Our digital marketing agency helps businesses grow and succeed
                online through a range of services including SEO, PPC, social
                media marketing, and content creation.
            </p>

            <Button href="#contact" className="w-full md:w-[264px]">
                Book a consultation
            </Button>
        </div>

        <!-- RIGHT COLUMN — hero illustration SVG (Desktop only) -->
        <div class="hidden lg:block shrink-0 relative w-[600px] h-auto">
            <img
                src={heroSrc}
                alt=""
                aria-hidden="true"
                class="block w-full h-auto object-contain"
            />
        </div>
    </div>

    <!-- ── LOGOTYPES ROW ───────────────────────────────────── -->
    <div
        class="flex flex-row flex-wrap justify-center lg:justify-between items-center w-full mx-auto box-border px-[20px] md:px-container-padding max-w-[1440px] gap-8 md:gap-10 mt-[60px] mb-[60px]"
    >
        {
            logos.map((logo) => (
                <img
                    src={logo.src}
                    alt={logo.alt}
                    style={`width:${logo.width}px;`}
                    class="block object-contain shrink-0 h-[30px] md:h-[48px] company-logo"
                />
            ))
        }
    </div>
</section>

<style>
    /* Only apply greyscale blend to the company icons, not the main hero illustration */
    .company-logo {
        mix-blend-mode: luminosity;
    }
</style>
