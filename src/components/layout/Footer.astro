---
import Logo from "@components/svgs/Logo.astro";
import SocialIcon from "@components/svgs/SocialIcon.astro";

const navLinks = [
    { name: "About us", href: "#" },
    { name: "Services", href: "#" },
    { name: "Use Cases", href: "#" },
    { name: "Pricing", href: "#" },
    { name: "Blog", href: "#" },
];

const socialLinks = [
    { platform: "linkedin", href: "#", name: "LinkedIn" },
    { platform: "facebook", href: "#", name: "Facebook" },
    { platform: "twitter", href: "#", name: "Twitter" },
] as const;
---

<footer class="md:px-[100px] bg-white max-w-[1440px] mx-auto">
    <div
        class="bg-[#191A23] rounded-t-[45px] p-[20px] md:pt-[55px] md:px-[60px] md:pb-[50px] flex flex-col gap-[40px] md:gap-[50px] max-w-[1440px] mx-auto"
    >
        <!-- Top Row: Logo, Nav, Socials -->
        <div
            class="flex flex-col lg:flex-row items-center justify-between gap-[40px] lg:gap-0"
        >
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2">
                <Logo fill="white" className="h-[29px] w-auto" />
            </a>

            <!-- Navigation -->
            <nav class="flex flex-wrap justify-center gap-[20px] md:gap-[40px]">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class="font-sans font-normal text-[18px] leading-[23px] text-white underline decoration-white underline-offset-4 hover:text-[#B9FF66] hover:decoration-[#B9FF66] transition-colors"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </nav>

            <!-- Social Icons -->
            <div class="flex items-center gap-[20px]">
                {
                    socialLinks.map((social) => (
                        <a
                            href={social.href}
                            class="w-[30px] h-[30px] transition-transform hover:scale-110"
                        >
                            <SocialIcon platform={social.platform} />
                        </a>
                    ))
                }
            </div>
        </div>

        <!-- Middle Row: Contact & Subscription -->
        <div
            class="flex flex-col lg:flex-row items-start justify-between gap-[40px] lg:gap-[154px]"
        >
            <!-- Contact Info -->
            <div
                class="flex flex-col items-center lg:items-start gap-[27px] w-full lg:w-[332px]"
            >
                <div class="bg-[#B9FF66] px-[7px] py-[2px] rounded-[7px]">
                    <h4
                        class="font-sans font-medium text-[20px] leading-[26px] text-black"
                    >
                        Contact us:
                    </h4>
                </div>
                <div
                    class="flex flex-col gap-[20px] items-center lg:items-start text-center lg:text-left"
                >
                    <p
                        class="font-sans font-normal text-[18px] leading-[23px] text-white"
                    >
                        Email: info@positivus.com
                    </p>
                    <p
                        class="font-sans font-normal text-[18px] leading-[23px] text-white"
                    >
                        Phone: 555-567-8901
                    </p>
                    <p
                        class="font-sans font-normal text-[18px] leading-[23px] text-white max-w-[332px]"
                    >
                        Address: 1234 Main St<br />
                        Moonstone City, Stardust State 12345
                    </p>
                </div>
            </div>

            <!-- Subscription Block -->
            <div
                class="w-full lg:w-[634px] bg-[#292A32] rounded-[14px] p-[20px] md:py-[58px] md:px-[40px] flex flex-col md:flex-row items-center gap-[20px] md:gap-[20px]"
            >
                <input
                    type="email"
                    placeholder="Email"
                    class="w-full md:w-[285px] h-[67px] bg-transparent border border-white rounded-[14px] px-[35px] py-[22px] font-sans font-normal text-[18px] leading-[23px] text-white placeholder:text-white focus:outline-none focus:ring-1 focus:ring-[#B9FF66]"
                />
                <button
                    class="w-full md:w-[249px] h-[68px] bg-[#B9FF66] rounded-[14px] font-sans font-normal text-[20px] leading-[28px] text-black text-center hover:bg-white transition-colors"
                >
                    Subscribe to news
                </button>
            </div>
        </div>

        <!-- Bottom Row: Copyright & Policy -->
        <div class="flex flex-col gap-[50px] w-full">
            <div class="w-full h-[1px] bg-white opacity-100"></div>
            <div class="flex flex-col md:flex-row items-center gap-[40px]">
                <p
                    class="font-sans font-normal text-[18px] leading-[28px] text-white"
                >
                    Â© 2023 Positivus. All Rights Reserved.
                </p>
                <a
                    href="#"
                    class="font-sans font-normal text-[18px] leading-[28px] text-white underline decoration-white underline-offset-4 hover:text-[#B9FF66] hover:decoration-[#B9FF66] transition-colors"
                >
                    Privacy Policy
                </a>
            </div>
        </div>
    </div>
</footer>
